{
  "platform": "azure",
  "endpoint": "https://AZDO_URL/ORG_NAME/",
  "azure-pipelines": {
    "enabled": true
  },
  "repositories": [
    "PROJECT/REPO"
  ],
  "prHourlyLimit": 0,
  "baseBranches": [
    "main"
  ],
  "hostRules": [
    {
      "matchHost": "AZDO_DOMAIN",
      "hostType": "azure-pipelines-tasks"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "azure-pipelines-tasks"
      ],
      "extractVersion": "^(?<version>\\d+)"
    }
  ],
  "extends": [
    "config:best-practices"
  ],
  "respectLatest": true,
  "ignoreUnstable": true
}
